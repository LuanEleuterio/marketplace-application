<% if(cards.length > 0) {
    for( let card of cards){ %>
        <%if(card.active){%>
            <div class="row m-0 ms-0 cards mb-3">
                <div class="row ms-0 col-12 card-info">
                    <div class="col-4">
                        <p>(CRÉDITO) Cartão terminado em</p>
                        <span><%=card.last4CardNumber%></span>
                    </div>
                    <div class="col-4">
                        <p>Expira em</p>
                        <span><%=card.expirationMonth%>/<%=card.expirationYear%></span>
                    </div>
                    <div class="col-4 align-self-center text-end">
                        <button class="btn btn-primary" type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#card-info-owner-<%=card._id.substr(19)%>" aria-expanded="false" 
                            aria-controls="card-info-owner-<%=card._id.substr(19)%>">
                            <i class="fas fa-angle-down"></i>
                        </button>
                    </div>
                </div>
                <div class="card-info-owner collapse" id="card-info-owner-<%=card._id.substr(19)%>">
                    <div class="card-owner">
                        <div>
                            <p>Nome no cartão</p>
                            <span class="name-owner"><%=card.holderName%></span>
                        </div>
                        <div>
                            <button data-card="<%=card._id%>" 
                                id="btn-delete-card-<%=card._id.substr(19)%>"
                                class="btn btn-danger btn-delete-card btn-card">
                                    <span class="btn-delete">Excluir</span>
                                    <div class="spinner-border text-light off" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                            </button>
                        </div>
                    </div>
                    <div class="card-owner-address">
                        <p>Endereço de cobrança</p>
                        <p><%=card.customer.address.street%></p>
                        <p><%=card.customer.address.city%>, <%=card.customer.address.state%> - <%=card.customer.address.postCode%></p>
                        <p><%=card.customer.phone%></p>
                    </div>
                </div>
            </div>
        <%}%>
    <%}
}%>