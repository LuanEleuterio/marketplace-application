
<% if(products.length > 0) {%>
    <table class="table  table-striped">
        <thead>
            <tr>
            <th scope="col">Status</th>
            <th scope="col">Foto</th>
            <th scope="col">Nome</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Pre√ßo</th>
            <th scope="col"></th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <%for( let product of products){ %>
                <%if(product.active) {%>
                    <tr>
                        <th scope="row">Ativo</th>
                        <td><img class="image-product" src="<%=viewHelper.showImage(product.img_url)%>" alt=""></td>
                        <td><%=product.name%></td>
                        <td><%=product.qtd%></td>
                        <td>R$ <%=product.price%></td>
                        <td><a class="btn btn-primary" href="/product/edit/<%=product._id%>">Editar</a></td>
                        <td><button data-prod-id="<%=product._id%>" class="btn btn-danger btn-delete-prod">Excluir</button></td>
                    </tr>
                <%}
            }%>
        </tbody>
    </table>
<%}%>