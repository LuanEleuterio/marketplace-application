<main class="container container-partner">
    <div class="row mb-4 new-product">
        <div class="row m-0 ms-0 products">
            <div class="row ms-0 col-12 product-info">
                <div class="col-8 align-self-center">
                    <h4 class="mb-0">Editar Produto</h4>
                </div>
            </div>
            <form class="row col justify-content-center">
                <div class="row justify-content-center">
                    <div class="row col-8 p-4">
                        <div class="row">
                            <div class="col-12 mb-2">
                                <input class="form-control" type="text" name="nameProd" id="nameProd" value="<%=product.name%>" placeholder="Nome do Produto">
                            </div>
                            <div class="col-6 mb-2">
                                <input class="form-control" type="number" name="price" id="price" value="<%=product.price%>" placeholder="Preço">
                            </div>
                            <div class="col-6">
                                <input class="form-control" type="number" min="1" name="quantity" id="quantity" value="<%=product.qtd%>" placeholder="Quant. em Estoque">
                            </div>
                        </div>
                        <div class="row mt-2">
                            <h5 class="col-12">Descrição</h5>
                            <div class="col-12">
                                <div class="form-floating" style="height: 100%">
                                    <textarea class="form-control d-flex" placeholder="Descrição" id="descriptionProd" style="height: 150px; resize: none"><%=product.description%></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <h5 class="col-12">Detalhes</h5>
                            <div class="col-4  mb-2">
                                <input class="form-control" type="text" name="manufacturer" id="manufacturer" value="<%=product.details.manufacturer%>" placeholder="Fabricante">
                            </div>
                            <div class="col-4  mb-2">
                                <input class="form-control" type="text" name="marca" id="marca" value="<%=product.details.marca%>" placeholder="Marca">
                            </div>
                            <div class="col-4  mb-2">
                                <input class="form-control" type="text" name="model" id="model" value="<%=product.details.model%>" placeholder="Modelo">
                            </div>
                            <div class="col-4  mb-2">
                                <input class="form-control" type="text" name="capacity" id="capacity" value="<%=product.details.capacity%>" placeholder="Capacidade do Produto">
                            </div>
                            <div class="col-4  mb-2">
                                <input class="form-control" type="text" name="color" id="color" value="<%=product.details.color%>" placeholder="Cor">
                            </div>
                            <div class="col-4  mb-2">
                                <input class="form-control" type="number" min="1" name="weight" value="<%=product.details.weight%>" id="weight" placeholder="Peso em gramas">
                            </div>
                        </div>
                        <div class="row mt-2">
                            <h5 class="col-12">Dimensões em cm (Centímetros)</h5>
                            <div class="col-4  mb-2">
                                <input class="form-control" type="number" min="1" name="height" id="heightProd" value="<%=product.details.dimension.height%>" placeholder="Altura">
                            </div>
                            <div class="col-4  mb-2">
                                <input class="form-control" type="number" min="1" name="width" id="widthProd" value="<%=product.details.dimension.width%>" placeholder="Largura">
                            </div>
                            <div class="col-4  mb-2">
                                <input class="form-control" type="number" min="1"name="comprimento" id="comprimentoProd" value="<%=product.details.dimension.comprimento%>" placeholder="Comprimento">
                            </div>
                        </div>
                    </div>
                    <div class="col-4 p-4">
                        <button class="btn btn-secondary col-12" type="button" id="btn-image">
                            <span class="btn-span-image">Carregar Imagem</span>
                            <div class="spinner-border text-light btn-spinner-image off" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </button>
                        <img src="<%=viewHelper.showImage(product.img_url)%>" alt="Imagem do Produto" id="image-loaded">
                        <input class="form-control off" type="file" id="upload">
                        <input class="off" id="product-image" name="product-image" type="hidden" id="upload"  value="<%=product.img_url%>">
                    </div>
                </div>
                <div class="row pb-3 justify-content-center">
                    <div class="col-12 align-self-center">
                        <button data-id-prod="<%=product._id%>" id="btn-update-product" class="btn btn-warning col-6">
                            <span class="btn-send-prod">Atualizar</span>
                            <div class="spinner-border text-light btn-product-spinner off" role="status">
                                <span class="visually-hidden">...</span>
                            </div>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>