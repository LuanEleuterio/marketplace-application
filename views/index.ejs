<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Home Page - Marketplace</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap"
        rel="stylesheet"
    />
    <link rel='stylesheet' href='/css/index.css'>
    <link rel="stylesheet" href="/css/user.css"/>
</head>
<body>
    <div class="row col-6 mt-6 form-user">
        <div class="row d-flex justify-content-center mb-3">
            <p class="navbar-brand d-flex justify-content-center me-0 text-center col-6 fs-3 mb-0" href="/">
                <i class="fas fa-shopping-bag fa-lg pe-1"></i> LuanEletro
            </p>
        </div>

        <div class="options row col-8">
            <button class="btn btn-primary" id="btn-login">Entrar</button>
            <button class="btn btn-primary" id="btn-cad-user">Cadastre-se como Usu√°rio</button>
            <button class="btn btn-primary" id="btn-cad-partner">Cadastre-se como Parceiro</button>
        </div>
    </div> 


    <script>
        const btnLogin = document.querySelector('#btn-login')
        const btnCadUser = document.querySelector('#btn-cad-user')
        const btnCadPartner = document.querySelector('#btn-cad-partner')

        btnLogin.addEventListener('click', () => {
            window.location.href = '/auth'
        })
        btnCadUser.addEventListener('click', () => {
            window.location.href = '/user/register'
        })
        btnCadPartner.addEventListener('click', () => {
            window.location.href = '/partner/register'
        })

    </script>
    <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" data-auto-a11y="true"></script>
        
</body>
</html>